<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatchandMeet.Notifications">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="Notification" ItemsSource="{Binding .}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding notice}" Detail="To see profile click here" TextColor="Black" Tapped="TextCell_Tapped" CommandParameter="{Binding user}"/>


                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>