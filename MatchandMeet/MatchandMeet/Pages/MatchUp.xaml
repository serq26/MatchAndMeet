<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MatchandMeet.MasterDetailPage.MatchUp"
             xmlns:image="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             Title="MatchUp">
    <StackLayout Padding="10">
       

        <StackLayout Orientation="Vertical" HeightRequest="200">
            
            <Label Text="350m" TextColor="Gray" FontAttributes="Italic" FontSize="20" HorizontalOptions="Center" Margin="10" ></Label>

            <StackLayout Orientation="Vertical">
                
                <image:CircleImage x:Name="userImage" HeightRequest="200" WidthRequest="200" Margin="40"></image:CircleImage>

                <Image IsVisible="False" HorizontalOptions="Center" Source="arrow.png" HeightRequest="100" x:Name="ImageArrow"/>
              
            </StackLayout>
            
            <StackLayout Orientation="Horizontal" Margin="20" VerticalOptions="End">
                <Label x:Name="userName"  FontSize="28" FontAttributes="Bold" TextColor="Black"></Label>
                <Label Text=","  FontSize="28" FontAttributes="Bold" TextColor="Black"></Label>
                <Label x:Name="userAge"  FontSize="28"  TextColor="Black"></Label>

                
            </StackLayout>

            <StackLayout Orientation="Vertical">

                <Label Text="Boylam"></Label>
                <Label x:Name="LogitudeLabel" FontSize="20"/>
                <Label Text="Enlem"></Label>
                <Label x:Name="LatitudeLabel" FontSize="20"/>
                <Label Text="Mesafe"></Label>
                <Label x:Name="DistanceLabel" FontSize="20"/>
            </StackLayout>

        </StackLayout>

		<Button x:Name="acceptbutton" Text="Accept" FontSize="20" TextColor="Blue" Clicked="Button_Clicked" ></Button>
        <!--<Button Text="Get GPS location" Clicked="OnButtonClicked" FontSize="20" />-->
     
    </StackLayout>
</ContentPage>